
gris= #E8E8E8
grisOscuro=#444
azul=#22BCE0
naranja = #DD4F24

body
	background gris
	color grisOscuro
	font-family Arial
	font-size 16px

header
	background grisOscuro
	color white
	overflow hidden
	padding 0.5em
	position relative
	
	.logo 
		border-right 1px solid azul
		float left 
		width 60px
		
		img
			width 55px
			
	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			font-weight bold
			font-style italic
			text-decoration none
			
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			
		
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
			
	.usuario
		position absolute
		top 10px
		right 10px
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2 
			img
				width 50px
				border-radius 50%
		
		.flechita
			background naranja
			color white
			display block
			padding 3px
			position absolute
			right 0
			text-align right
			top 15px
			width 50%
			z-index 0
			
			

				
				
nav
	background azul
	
